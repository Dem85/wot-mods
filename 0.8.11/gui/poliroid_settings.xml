<poliroid_settings.xml>




	<!-- ComanderCam - Отдаление в аркадном режиме -->
	<!-- Мин. - 1, Макс. - 400 -->
	<!-- Стандарт - "5 25" -->

	<arcade_mode_distance>5 100</arcade_mode_distance>




	<!-- ComanderCam - Отдаление в Артилерийский режиме -->
	<!-- Мин. - 1, Макс - 400 -->
	<!-- Стандарт "40 100" -->
	
	<strategic_mode_distance>10 200</strategic_mode_distance>




	<!-- ZoomX - Шаги зума в снайперском режиме -->
	<!-- Мин. - 1, Макс. - 50 -->
	<!-- Разделяються шаги символом пробел " " -->
	<!-- Стандарт "2 4 8" -->

	<sniper_mode_zoom>1 2 4 8 10 12 14 16 20 25</sniper_mode_zoom>




	<!-- NoScroll - Отмена смены режима по Скроллу (Колесику) мишки -->
	<!-- "True" либо "False" -->
	<!-- "True" - Переход между режимами только по кнопке Shift -->
	<!-- "False" - Переход между режимами по Скроллу + Shift -->
	<!-- Стандарт "False" -->

	<noscroll>False</noscroll>




	<!-- NoBinoculares - Отключение затемнения в снайперском режиме -->
	<!-- "True" либо "False" -->
	<!-- "True" - затемнение в снайперском режиме отлючено -->
	<!-- "False" - затемнение в снайперском режиме включено -->
	<!-- Стандарт "False" -->

	<nobinaculares>False</nobinaculares>


	
	
	

	<!-- NoDynamic - Отключение покачивание прицела и камеры -->
	<!-- Для включения мода NoDynamic измените название файла -->
	<!-- с "avatar_input_handler_nodinamic.xml" на "avatar_input_handler.xml" -->
	<!-- Сам файл находиться в тойже папке что и етот конфиг -->
	
	
	
</poliroid_settings.xml>